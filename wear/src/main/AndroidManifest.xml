<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:label="Fairware Lift">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="Fairware Lift">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
          NEW: Add a metadata tag to link to the wear.xml file.
          This tells the Wear OS system to read the capabilities we defined.
        -->
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="false" />
        <meta-data
            android:name="com.google.android.wearable.capabilities"
            android:resource="@array/android_wear_capabilities" />

    </application>

</manifest>